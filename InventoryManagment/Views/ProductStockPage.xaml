<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="InventoryManagment.Views.ProductStockPage">
    <StackLayout Padding="20">
        <Label Text="Stan Magazynowy" FontSize="20" FontAttributes="Bold"/>
        <ListView x:Name="ProductStockListView">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <TextCell Text="{Binding ProductName}" Detail="{Binding Stock}"/>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </StackLayout>
</ContentPage>
